<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    layout_gravity="center_horizontal"
    orientation="horizontal"
    id="@+id/bs8"
    layout_width="match_parent"
    layout_height="40dp">
    <ImageView
        layout_gravity="center_vertical"
        id="@+id/acd"
        layout_width="32dp"
        layout_height="32dp"
        src="@drawable/b7n"
        scaleType="centerCrop"/>
    <LinearLayout
        layout_gravity="center_vertical"
        orientation="horizontal"
        id="@+id/bst"
        background="@drawable/a_f"
        layout_width="match_parent"
        layout_height="36dp"
        layout_marginStart="4dp">
        <TextView
            ellipsize="end"
            gravity="center_vertical"
            layout_gravity="center"
            id="@+id/text"
            layout_width="match_parent"
            layout_height="wrap_content"
            maxLines="2"
            lineSpacingExtra="2dp"
            paddingStart="8dp"
            style="@style/nc"/>
    </LinearLayout>
</LinearLayout>
