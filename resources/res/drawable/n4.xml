<?xml version="1.0" encoding="utf-8"?>
<layer-list>
    <item
        id="@android:id/background"
        drawable="@drawable/n1"/>
    <item id="@android:id/secondaryProgress">
        <scale scaleWidth="100%">
            <selector>
                <item state_enabled="false">
                    <color color="@android:color/transparent"/>
                </item>
                <item drawable="@drawable/n0"/>
            </selector>
        </scale>
    </item>
    <item id="@android:id/progress">
        <scale scaleWidth="100%">
            <selector>
                <item state_enabled="false">
                    <color color="@android:color/transparent"/>
                </item>
                <item drawable="@drawable/n0"/>
            </selector>
        </scale>
    </item>
</layer-list>
