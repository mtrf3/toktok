<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/br"
    android:insetRight="@dimen/br"
    android:insetTop="@dimen/bs"
    android:insetBottom="@dimen/bs">
    <ripple android:color="?android:attr/colorControlHighlight">
        <item>
            <selector>
                <item android:state_enabled="false">
                    <shape android:shape="rectangle">
                        <corners android:radius="@dimen/bx"/>
                        <solid android:color="?android:attr/colorButtonNormal"/>
                        <padding
                            android:left="@dimen/bt"
                            android:top="@dimen/bu"
                            android:right="@dimen/bt"
                            android:bottom="@dimen/bu"/>
                    </shape>
                </item>
                <item>
                    <shape android:shape="rectangle">
                        <corners android:radius="@dimen/bx"/>
                        <solid android:color="?android:attr/colorAccent"/>
                        <padding
                            android:left="@dimen/bt"
                            android:top="@dimen/bu"
                            android:right="@dimen/bt"
                            android:bottom="@dimen/bu"/>
                    </shape>
                </item>
            </selector>
        </item>
    </ripple>
</inset>
