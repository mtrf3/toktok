<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    layout_gravity="center"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="wrap_content">
    <LinearLayout
        orientation="vertical"
        background="@drawable/der"
        layout_width="match_parent"
        layout_height="wrap_content">
        <TextView
            textSize="20sp"
            textColor="#333"
            gravity="center"
            id="@+id/mo6"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginTop="20dp"
            text="@string/bkq"/>
        <TextView
            textSize="16sp"
            textColor="#888"
            id="@+id/mb7"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginTop="10dp"
            layout_marginBottom="20dp"
            text="@string/bkr"
            lineSpacingExtra="5dp"
            layout_marginStart="30dp"
            layout_marginEnd="30dp"/>
        <View
            background="#bbb"
            layout_width="match_parent"
            layout_height="1dp"/>
        <LinearLayout
            orientation="horizontal"
            layout_width="match_parent"
            layout_height="wrap_content">
            <TextView
                textSize="18sp"
                textColor="#888"
                gravity="center"
                id="@+id/m1c"
                paddingTop="15dp"
                paddingBottom="15dp"
                layout_width="0dp"
                layout_height="wrap_content"
                text="@string/bkm"
                layout_weight="1"/>
            <View
                background="#bbb"
                layout_width="1dp"
                layout_height="match_parent"/>
            <TextView
                textSize="18sp"
                textColor="#333"
                gravity="center"
                id="@+id/m2u"
                paddingTop="15dp"
                paddingBottom="15dp"
                layout_width="0dp"
                layout_height="wrap_content"
                text="@string/bkn"
                layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
