<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    orientation="vertical"
    layout_width="match_parent"
    layout_height="wrap_content">
    <TextView
        textAppearance="@style/s"
        ellipsize="end"
        gravity="center_vertical"
        id="@+id/b0"
        paddingLeft="24dp"
        paddingRight="24dp"
        layout_width="match_parent"
        layout_height="wrap_content"
        minHeight="64dp"
        text="@string/ap"
        singleLine="true"/>
    <ListView
        id="@+id/av"
        paddingBottom="24dp"
        layout_width="match_parent"
        layout_height="wrap_content"
        divider="@android:color/transparent"
        dividerHeight="0dp"/>
    <LinearLayout
        orientation="vertical"
        id="@android:id/empty"
        paddingLeft="16dp"
        paddingTop="90dp"
        paddingRight="16dp"
        visibility="gone"
        layout_width="match_parent"
        layout_height="240dp">
        <TextView
            textAppearance="@style/r"
            layout_gravity="center"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="@string/ao"/>
        <ProgressBar
            layout_gravity="center"
            layout_width="150dp"
            layout_height="wrap_content"
            indeterminate="true"
            style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>
</LinearLayout>
