<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    gravity="center_vertical"
    orientation="horizontal"
    paddingLeft="24dp"
    paddingRight="24dp"
    paddingBottom="24dp"
    layout_width="match_parent"
    layout_height="wrap_content"
    minHeight="32dp">
    <ImageView
        id="@+id/ax"
        layout_width="24dp"
        layout_height="24dp"
        layout_marginRight="24dp"
        layout_marginEnd="24dp"/>
    <ProgressBar
        id="@+id/az"
        visibility="gone"
        layout_width="24dp"
        layout_height="24dp"
        layout_marginRight="24dp"
        indeterminate="true"
        layout_marginEnd="24dp"
        style="?android:attr/progressBarStyle"/>
    <LinearLayout
        orientation="vertical"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginBottom="1dp">
        <TextView
            textAppearance="@style/q"
            ellipsize="marquee"
            gravity="start"
            id="@+id/ay"
            layout_width="match_parent"
            layout_height="32dp"
            singleLine="true"
            textAlignment="viewStart"/>
        <TextView
            textAppearance="@style/r"
            ellipsize="marquee"
            gravity="start"
            id="@+id/aw"
            layout_width="match_parent"
            layout_height="24dp"
            singleLine="true"
            textAlignment="viewStart"/>
    </LinearLayout>
</LinearLayout>
