<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    background="#e6000000"
    paddingLeft="20dp"
    paddingTop="10dp"
    paddingRight="15dp"
    paddingBottom="10dp"
    layout_width="match_parent"
    layout_height="wrap_content">
    <ImageView
        id="@+id/eiq"
        layout_width="30dp"
        layout_height="30dp"
        layout_marginRight="15dp"/>
    <TextView
        textSize="12sp"
        textColor="?attr/dj"
        id="@+id/title"
        layout_width="wrap_content"
        layout_height="wrap_content"
        maxWidth="220dp"
        maxLines="1"
        includeFontPadding="false"
        layout_toRightOf="@+id/eiq"
        layout_alignTop="@+id/eiq"/>
    <TextView
        textSize="12sp"
        textColor="#99ffffff"
        id="@+id/time"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginLeft="8dp"
        layout_marginRight="8dp"
        includeFontPadding="false"
        layout_toRightOf="@+id/title"
        layout_alignTop="@+id/title"/>
    <TextView
        textSize="12sp"
        textColor="#99ffffff"
        ellipsize="end"
        id="@+id/desc"
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_marginTop="3dp"
        maxLines="2"
        includeFontPadding="false"
        layout_toRightOf="@+id/eiq"
        layout_below="@+id/title"
        lineSpacingExtra="1dp"/>
</RelativeLayout>
