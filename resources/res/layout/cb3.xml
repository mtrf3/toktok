<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    orientation="vertical"
    paddingLeft="32dp"
    paddingRight="32dp"
    layout_width="match_parent"
    layout_height="match_parent">
    <ScrollView
        id="@+id/erc"
        layout_width="match_parent"
        layout_height="0dp"
        layout_weight="1">
        <LinearLayout
            orientation="vertical"
            layout_width="match_parent"
            layout_height="wrap_content">
            <com.bytedance.lighten.loader.SmartImageView
                id="@+id/er3"
                layout_width="match_parent"
                layout_height="187dp"
                scaleType="centerCrop"/>
            <com.bytedance.tux.input.TuxTextView
                ellipsize="end"
                id="@+id/erf"
                layout_width="match_parent"
                layout_height="wrap_content"
                text="@string/bt2"
                maxLines="1"
                textDirection="locale"
                textAlignment="center"
                NOT_FOUND_0x11="13"/>
            <com.bytedance.tux.input.TuxTextView
                ellipsize="end"
                id="@+id/eqw"
                layout_width="match_parent"
                layout_height="wrap_content"
                layout_marginTop="12dp"
                text="@string/bt1"
                maxLines="3"
                textDirection="locale"
                textAlignment="center"
                NOT_FOUND_0x11="41"/>
        </LinearLayout>
    </ScrollView>
    <X.SY4
        id="@+id/eqt"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="32dp"
        layout_marginBottom="16dp"
        text="@string/bt7"
        textDirection="locale"
        NOT_FOUND_0xf="3"
        NOT_FOUND_0x10="0"/>
</LinearLayout>
