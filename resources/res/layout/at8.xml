<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    gravity="bottom"
    orientation="vertical"
    layout_width="match_parent"
    layout_height="match_parent">
    <FrameLayout
        id="@+id/hbv"
        focusable="true"
        clickable="true"
        layout_width="match_parent"
        layout_height="wrap_content"/>
    <RelativeLayout
        gravity="center_vertical"
        layout_gravity="bottom"
        id="@+id/j5u"
        background="@color/et"
        focusable="true"
        clickable="true"
        layout_width="match_parent"
        layout_height="60dp">
        <ImageView
            textSize="14sp"
            id="@+id/f8b"
            layout_width="45dp"
            layout_height="45dp"
            src="@drawable/aru"
            scaleType="centerInside"
            layout_centerVertical="true"
            layout_marginEnd="20dp"
            layout_alignParentEnd="true"/>
        <TextView
            textSize="14sp"
            textColor="@color/g6"
            id="@+id/md_"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_centerInParent="true"
            layout_centerVertical="true"/>
        <RelativeLayout
            id="@+id/iyf"
            visibility="gone"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_centerVertical="true"
            layout_marginStart="16dp">
            <ImageView
                id="@+id/f8e"
                layout_width="20dp"
                layout_height="20dp"
                src="@drawable/arx"
                layout_centerVertical="true"/>
            <TextView
                textSize="14sp"
                textColor="@color/g6"
                id="@+id/mho"
                layout_width="wrap_content"
                layout_height="wrap_content"
                text="@string/q5h"
                layout_centerVertical="true"
                layout_marginStart="7dp"
                layout_toEndOf="@+id/f8e"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
