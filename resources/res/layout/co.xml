<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    gravity="center_vertical"
    orientation="horizontal"
    paddingLeft="12dp"
    paddingRight="12dp"
    layout_width="wrap_content"
    layout_height="48dp">
    <ImageView
        id="@+id/egd"
        visibility="gone"
        layout_width="32dp"
        layout_height="32dp"
        layout_marginRight="8dp"
        layout_marginEnd="8dp"/>
    <com.bytedance.tux.input.TuxTextView
        id="@+id/text"
        layout_width="wrap_content"
        layout_height="wrap_content"
        maxWidth="226dp"
        singleLine="true"/>
    <com.bytedance.tux.icon.TuxIconView
        id="@+id/a7w"
        layout_width="12dp"
        layout_height="12dp"/>
</LinearLayout>
