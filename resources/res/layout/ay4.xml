<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    gravity="center_vertical"
    orientation="horizontal"
    paddingTop="10dp"
    paddingBottom="10dp"
    layout_width="match_parent"
    layout_height="wrap_content"
    paddingStart="16dp"
    paddingEnd="20dp">
    <com.ss.android.ugc.aweme.base.ui.SmartAvatarImageView
        id="@+id/abl"
        layout_width="48dp"
        layout_height="48dp"/>
    <com.bytedance.tux.input.TuxTextView
        textColor="?attr/dj"
        ellipsize="end"
        layout_gravity="start|center_vertical"
        id="@+id/h1f"
        layout_width="0dp"
        layout_height="wrap_content"
        layout_marginLeft="12dp"
        layout_marginRight="12dp"
        maxWidth="155dp"
        maxLines="3"
        layout_weight="1"
        textAlignment="viewStart"
        NOT_FOUND_0x14="42"/>
    <FrameLayout
        layout_gravity="end|center_vertical"
        id="@+id/j1u"
        layout_width="wrap_content"
        layout_height="wrap_content">
        <com.bytedance.tux.input.TuxTextView
            textColor="?attr/dm"
            ellipsize="end"
            layout_gravity="end|center_vertical"
            id="@+id/do7"
            layout_width="wrap_content"
            layout_height="wrap_content"
            text="@string/exk"
            maxLines="1"/>
        <com.ss.android.ugc.aweme.relation.follow.ui.RelationButton
            id="@+id/iua"
            visibility="gone"
            layout_width="88dp"
            layout_height="28dp"/>
    </FrameLayout>
</LinearLayout>
