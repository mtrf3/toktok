<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    orientation="vertical"
    background="@color/v7"
    layout_width="match_parent"
    layout_height="match_parent">
    <RelativeLayout
        id="@+id/la4"
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginTop="6dp">
        <TextView
            textSize="17sp"
            textColor="@color/hp"
            gravity="center"
            id="@+id/kug"
            layout_width="50dp"
            layout_height="32dp"
            layout_marginRight="16dp"
            text="@string/q8h"
            layout_alignParentRight="true"
            fontFamily="ProximaNova-Semibold"
            layout_marginEnd="16dp"
            layout_alignParentEnd="true"/>
        <FrameLayout
            id="@+id/jlw"
            visibility="gone"
            layout_width="32dp"
            layout_height="32dp"
            layout_centerInParent="true">
            <View
                layout_gravity="center"
                id="@+id/aj3"
                layout_width="20dp"
                layout_height="20dp"/>
            <View
                layout_gravity="center"
                id="@+id/aj4"
                layout_width="24dp"
                layout_height="24dp"/>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        orientation="vertical"
        id="@+id/bt6"
        layout_width="match_parent"
        layout_height="match_parent"
        layout_below="@+id/la4">
        <RelativeLayout
            id="@+id/eor"
            layout_width="match_parent"
            layout_height="match_parent"
            layout_marginLeft="24dp"
            layout_marginRight="24dp"
            layout_weight="1">
            <EditText
                textSize="28sp"
                textStyle="bold"
                textColor="#ffffff"
                gravity="center"
                id="@+id/cqw"
                background="@null"
                padding="12dp"
                layout_width="match_parent"
                layout_height="wrap_content"
                layout_centerInParent="true"
                lineSpacingExtra="0dp"
                inputType="textMultiLine"
                textCursorDrawable="@drawable/c0k"/>
        </RelativeLayout>
        <LinearLayout
            layout_gravity="bottom"
            orientation="vertical"
            layout_width="match_parent"
            layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
