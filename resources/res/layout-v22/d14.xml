<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    orientation="vertical"
    layout_width="match_parent"
    layout_height="match_parent">
    <View
        id="@+id/cbx"
        layout_width="match_parent"
        layout_height="0dp"
        layout_weight="1"/>
    <LinearLayout
        layout_gravity="bottom"
        orientation="vertical"
        background="@drawable/ccf"
        layout_width="match_parent"
        layout_height="wrap_content">
        <X.C47121t6
            textColor="@color/ck"
            layout_gravity="center"
            id="@+id/ipl"
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_marginTop="10dp"
            style="@style/a4a"/>
        <androidx.recyclerview.widget.RecyclerView
            id="@+id/aci"
            layout_width="match_parent"
            layout_height="84dp"
            layout_marginTop="8dp"/>
        <View
            background="@color/ck"
            layout_width="match_parent"
            layout_height="0.5dp"
            layout_marginLeft="16dp"
            layout_marginTop="@dimen/o1"
            layout_marginRight="16dp"
            alpha="0.12"
            layout_marginHorizontal="16dp"/>
        <LinearLayout
            layout_width="match_parent"
            layout_height="wrap_content">
            <com.bytedance.android.live.design.widget.LiveEditText
                textColor="@color/ck"
                layout_gravity="center"
                id="@+id/cps"
                background="@null"
                focusable="true"
                layout_width="0dp"
                layout_height="wrap_content"
                layout_margin="16dp"
                text="@string/lqu"
                layout_weight="1"
                focusedByDefault="true"
                style="@style/a43"/>
            <ImageView
                id="@+id/hf9"
                layout_width="42dp"
                layout_height="56dp"
                layout_marginLeft="16dp"
                layout_marginTop="16dp"
                layout_marginRight="16dp"
                layout_marginBottom="16dp"
                layout_marginHorizontal="16dp"
                layout_marginVertical="16dp"/>
        </LinearLayout>
        <X.C47121t6
            textColor="@color/ar"
            gravity="center"
            id="@+id/jo2"
            layout_width="match_parent"
            layout_height="44dp"
            layout_marginLeft="16dp"
            layout_marginRight="16dp"
            layout_marginBottom="16dp"
            text="@string/lqt"
            layout_marginHorizontal="16dp"
            style="@style/a45"/>
    </LinearLayout>
</LinearLayout>
